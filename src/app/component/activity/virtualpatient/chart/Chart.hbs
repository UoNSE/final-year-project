<div id="chart" class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Patients Chart</h3>
    </div>
    <table>
        <tr>
            <td>First Name</td>
            <td>{{firstname}}</td>
        </tr>
        <tr>
            <td>Last Name</td>
            <td>{{lastname}}</td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>{{sex}}</td>
        </tr>
        <tr>
            <td>Age</td>
            <td>{{age}}</td>
        </tr>
        <tr>
            <td>DOB</td>
            <td>{{dob}}</td>
        </tr>
        <tr>
            <td>Occupation</td>
            <td>{{profession}}</td>
        </tr>

        <tr>
            <td>Current medication</td>
            <td>Insulin</td>
        </tr>
    </table>
    <div class= "centerize">
        <button id="hide-chart-button" class="btn btn-primary btn-raised hide-chart-button">Hide</button>
    </div>
</div>
