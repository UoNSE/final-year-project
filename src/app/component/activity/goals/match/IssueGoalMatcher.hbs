<div class="panel panel-{{mtl-color color}}{{#if classes}}{{ classes}}{{/if}}"
     style="width: {{units width}}; height: {{units height}}">
	{{#if title}}
        <div class="panel-heading">
            <h3 class="panel-title">{{title}}</h3>
        </div>
	{{/if}}
    <div class="panel-body">

        <div class="panel panel-danger">
            <div class="panel-heading">

				{{#with issue}}
                    <h3 class="panel-title">Issue: {{body}}</h3>
				{{/with}}

            </div>
            <div class="panel-body">

            </div>
        </div>

    </div>
</div>
