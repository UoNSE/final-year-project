<div class="panel panel-{{mtl-color color}}"
     style="width: {{units width}}; height: {{units height}}">
	{{#if issue}}
        <div class="panel-heading">
            <h3 class="panel-title">{{issue}}</h3>
        </div>
	{{/if}}
    <div class="panel-body">

		{{#if goal}}
            <div class="panel-heading">
                <h3 class="panel-title">{{goal}}</h3>
            </div>
		{{/if}}

    </div>

</div>
