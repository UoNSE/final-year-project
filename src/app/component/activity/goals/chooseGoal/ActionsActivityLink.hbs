         style="width: {{units width}}; height: {{units height}}">
		{{#if title}}
            <div class="panel-heading">
                <h3 class="panel-title">{{title}}</h3>
            </div>
		{{/if}}
        <div class="panel-body">{{body}}</div>
    </div>
</a>
