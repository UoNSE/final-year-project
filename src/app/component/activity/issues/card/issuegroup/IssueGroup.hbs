<div class="panel panel-{{mtl-color color}}{{#if classes}}{{ classes}}{{/if}}"
 style="width: {{units width}}; height: {{units height}}">
	{{#if title}}
		<div class="panel-heading">
			<h3 class="panel-title">{{title}}</h3>
		</div>
	{{/if}}
	<div class="panel-body">
		{{#if issue}}
			<div class="panel panel-danger">
				<div class="panel-heading">
					<h3 class="panel-title">Issue</h3>
				</div>
				<div class="panel-body">
					{{body}}
				</div>
			</div>
		{{/if}}
		{{#each evidence}}
			<div class="panel panel-danger">
				<div class="panel-heading">
					<h3 class="panel-title">Evidence</h3>
				</div>
				<div class="panel-body">
					{{body}}
				</div>
			</div>
		{{/each}}
	</div>
</div>
